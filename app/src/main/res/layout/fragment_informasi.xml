<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tampilan.Fragment.FragmentInformasi">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:background="@drawable/bg_frame">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Profil"
                android:textColor="#171313"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="548dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/img_profil"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/profil" />

                <TextView
                    android:id="@+id/profil_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_profil"
                    android:layout_centerHorizontal="true"
                    android:text="Aleksi"
                    android:textSize="31sp" />

                <TextView
                    android:id="@+id/instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/univ"
                    android:layout_centerHorizontal="true"
                    android:text="@string/instagram"
                    android:textSize="20sp"
                    android:autoLink="all"
                    android:linksClickable="true" />

                <TextView
                    android:id="@+id/fakultas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profil_nama"
                    android:layout_centerHorizontal="true"
                    android:text="@string/fakultas"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/univ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fakultas"
                    android:layout_centerHorizontal="true"
                    android:text="@string/univ"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
